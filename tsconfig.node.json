{
  "compilerOptions": {
    "jsx": "react",
    "composite": true,
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["vitest/globals", "@testing-library/jest-dom"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": [
    "vite.config.ts",
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*.json",
    "src/components/bookshelf/DataContext.jsx"
  ]
}
